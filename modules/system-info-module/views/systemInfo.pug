paper-material(elevation="1")
    each element in settings.elements
        case element.name
            when "uptime"
                if element.active
                    div(style="margin:1%;")= "System uptime: " + uptime.days + " : " + ('0' + uptime.hours).slice(-2) + " : " + ('0' + uptime.minutes).slice(-2)
            when "memory"
                if element.active
                    div(style="margin:1%;")= "Free memory: " + Math.floor((os.freemem()/os.totalmem())*100) + "%"
                        paper-progress(class= "wideSlider", value= Math.floor(((os.totalmem() - os.freemem())/os.totalmem())*100), min= '0', max= '100')
            when "loadAverage"
                if element.active
                    - var load = os.loadavg()[0].toFixed(2)
                    div(style="margin:1%;")= "Load average: " + load
                        div(class= "container")
                            - var cores = os.cpus();
                            each core, index in cores
                                - var coreLoad = (load - index)*100
                                div(class= 'coreSlider')
                                    = ` core #${index} `
                                    paper-progress(class= "wideSlider", value= coreLoad, min= 0, max= 100)
