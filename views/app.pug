extends layout.pug

block title
    title SolanaPage

block append main-page
    each module in modules
        if module.mainView
            div(id= module.name, class= "modules")
                != module.mainView

block append settings-page
    each module in modules
        if module.settingsView
            div(id= module.name, class= "modules")
                paper-material
                    != module.settingsView

block append scripts
    each module in settings.modules
        script(type= "text/javascript", src=`/${module.name}/script.js`)
